---
import { getCollection } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

const jpgs = (await getCollection("jpg")).sort(
    (a, b) => b.data.serial - a.data.serial
);
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <BaseHead title="JPG â€¢ dhirajgagrai.dev" description="Photo dump of Dhiraj Gagrai" />
        <style>
            body {
                background-color: #000;
            }
            * {
                color: #fff !important;
            }
            img {
                margin: 20px 0;
            }
            i {
                font-size: 0.8rem;
            }
            .container {
                display: flex;
                flex-direction: column;
                margin-bottom: 50px;
            }
            .image-title {
                text-align: center;
                font-size: 0.9rem;
                font-weight: bolder;
            }
            .image-footer {
                margin-top: 10px;
            }
        </style>
    </head>
    <body>
        <Header theme="dark" />
        <main>
            <section>
                <ul>
                    {
                        jpgs.map(async (jpg) => {
                            const { Content } = await jpg.render();
                            return (
                                <div class="container">
                                    <p class="image-title">{jpg.data.serial}</p>
                                    <img src={jpg.data.url} />
                                    <p class="image-title">{jpg.data.title}</p>
                                    <Content />
                                    <i class="image-footer">Taken on <FormattedDate date={jpg.data.date} /></i>
                                </div>
                            );
                        })
                    }
                </ul>
            </section>
        </main>
        <Footer />
    </body>
</html>
